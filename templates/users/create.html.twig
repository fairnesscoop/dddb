{% extends 'base.html.twig' %}

{% block title %}
  {{ 'users.create.meta.title'|trans }}
  -
  {{ parent() }}
{% endblock %}

{% block body %}
  <main>
    <div>
      <h1 class="text-xl font-bold tracking-tight md:text-2xl">{{ 'users.create.title'|trans }}</h1>
      {{ form_start(form, { 'attr': { 'class': 'space-y-4 md:space-y-6' } }) }}
      <div>
        {{ form_label(form.firstName, null, { 'label_attr': { 'class': 'block mb-2 text-sm font-medium' }}) }}
        {{ form_widget(form.firstName, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5' } }) }}
      </div>
      <div>
        {{ form_label(form.lastName, null, { 'label_attr': { 'class': 'block mb-2 text-sm font-medium' }}) }}
        {{ form_widget(form.lastName, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5' } }) }}
      </div>
      <div>
        {{ form_label(form.email, null, { 'label_attr': { 'class': 'block mb-2 text-sm font-medium' }}) }}
        {{ form_widget(form.email, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5' } }) }}
      </div>
      <div>
        {{ form_label(form.password.first, null, { 'label_attr': { 'class': 'block mb-2 text-sm font-medium' }}) }}
        {{ form_widget(form.password.first, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5' } }) }}
      </div>
      <div>
        {{ form_label(form.password.second, null, { 'label_attr': { 'class': 'block mb-2 text-sm font-medium' }}) }}
        {{ form_widget(form.password.second, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5' } }) }}
      </div>
      <div>
        {{ form_label(form.role, null, { 'label_attr': { 'class': 'block mb-2 text-sm font-medium' }}) }}
        {{ form_widget(form.role, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5' } }) }}
      </div>
      <button type="submit" class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
        {{ 'users.create.form.submit'|trans }}
      </button>
      {{ form_end(form) }}
    </div>
  </main>
{% endblock %}
