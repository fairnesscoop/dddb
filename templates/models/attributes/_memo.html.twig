<turbo-frame id="model-attribute-memo" class="block mt-3">
  {% if attribute is not empty %}

    {% if attribute.derived %}
      <em class="bg-primary-400 text-primary-100 block rounded-t text-xs not-italic font-bold px-2 py-1">{{ 'attributes.derivedValue'|trans }}</em>
    {% endif %}

    <a href="{{ path('app_attribute_memo_set', {'model': model.uuid}) }}" class="mt-2 float-right block mx-2">
      <button class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-1 text-center">
        {{ 'common.update'|trans }}
      </button>
    </a>

    <div class="{{ attribute.derived ? 'bg-primary-100 rounded-b text-primary-800' : 'bg-gray-100 rounded-lg' }}  px-2 py-1">
      <h2 class="text-base font-semibold tracking-tight md:text-2l">{{ 'attributes.memo.title'|trans }}</h2>
      <p class="text-sm">
        {{ attribute.value|nl2br }}
      </p>
    </div>

    {% else %}
    <a href="{{ path('app_attribute_memo_set', {'model': model.uuid}) }}">
      <button class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-1 text-center">
        {{ 'attributes.memo.add'|trans }}
      </button>
    </a>
  {% endif %}
</turbo-frame>
