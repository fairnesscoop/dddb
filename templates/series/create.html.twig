{% extends 'base.html.twig' %}

{% block title %}
  {{ 'series.create.meta.title'|trans }}
  -
  {{ parent() }}
{% endblock %}

{% block body %}
  {% include "common/_aside.html.twig" %}
  <main class="ml-72 py-8 px-8">
    <section class="w-96">
      <h1 class="text-xl font-bold tracking-tight mb-8 md:text-2xl">{{ 'series.create.title'|trans }}</h1>
      {{ form_start(form, { 'attr': { 'class': 'space-y-4 md:space-y-6' } }) }}
      {{ form_row(form.manufacturer) }}
      {{ form_row(form.name) }}
      <button type="submit" class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
        {{ 'series.create.form.submit'|trans }}
      </button>

      {{ form_end(form) }}
    </section>
  </main>
{% endblock %}
