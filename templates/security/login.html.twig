{% extends 'base.html.twig' %}

{% block title %}
  {{ 'common.login'|trans }}
  -
  {{ parent() }}
{% endblock %}

{% block body %}
  <main class="bg-gray-50 min-h-screen flex flex-col items-center justify-center px-4 py-8 mx-auto lg:py-0">
    <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md p-6 space-y-4 md:space-y-6 sm:p-8">
      <h1 class="text-xl font-bold tracking-tight md:text-2xl">{{ 'common.login'|trans }}</h1>
      {{ form_start(form, { 'attr': { 'class': 'space-y-4 md:space-y-6' } }) }}
      {{ form_errors(form) }}
      <div>
        {{ form_label(form.email, null, { 'label_attr': { 'class': 'block mb-2 text-sm font-medium' }}) }}
        {{ form_widget(form.email, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5' } }) }}
        {{ form_help(form.email) }}
        {{ form_errors(form.email) }}
      </div>
      <div>
        {{ form_label(form.password, null, { 'label_attr': { 'class': 'block mb-2 text-sm font-medium' }}) }}
        {{ form_widget(form.password, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5' } }) }}
        {{ form_help(form.password) }}
        {{ form_errors(form.password) }}
      </div>
      <button type="submit" class="w-full text-white bg-teal-600 hover:bg-teal-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
        {{ 'common.login'|trans }}
      </button>
      {{ form_end(form) }}
      <p class="text-sm font-light text-gray-500">
        {{ 'login.password_forgotten'|trans }}
        <a href="#" class="font-medium text-primary-600 hover:underline dark:text-primary-500">
          {{ 'login.reset_password'|trans }}
        </a>
      </p>
    </div>
  </main>
{% endblock %}