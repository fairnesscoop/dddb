{% extends 'base.html.twig' %}

{% block title %}
  {{ 'login.meta.title'|trans }}
  -
  {{ parent() }}
{% endblock %}

{% block body %}
  <h1>Register</h1>

  {{ form_start(form) }}
  <div>
    {{ form_row(form.firstName) }}
    {{ form_row(form.lastName) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password) }}
  </div>

  {{ form_end(form) }}
{% endblock %}
