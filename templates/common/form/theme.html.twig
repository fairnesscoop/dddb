{% block form_row %}
  <div>
    {{- form_label(form, null, { 'label_attr': { 'class': 'block mb-2 text-sm font-medium' }}) -}}
    {{- form_widget(form, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5' } }) -}}
    <p class="mb-2 text-sm text-red-500" id="{{ id }}_error">
      {%- for error in errors -%}
        {{ error.message }}
      {%- endfor -%}
    </p>
  </div>
{% endblock form_row %}
